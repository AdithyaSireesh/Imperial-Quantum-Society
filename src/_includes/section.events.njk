{% for item in collections.sections %} 
{% if item.data.type === 'events' %}
<div id="events" class="w-screen min-h-screen flex flex-col justify-center items-center bg-blue-900 py-12 px-5">
    <div class="w-full flex justify-between items-center mb-4 hidden md:flex">
        <h2 class="text-3xl text-gray-100 font-medium">
          Past Events
        </h2>
        <div>
          <button id="slideLeft"
            class="cursor-pointer text-xl mx-1 text-gray-100 font-bold"
          >
            Prev
          </button>
          <button id="slideRight"
            class="cursor-pointer text-xl mx-1 text-gray-100 font-bold"
          >
            Next
          </button>
        </div>
      </div>
    <div id="scrollContainer"
        class="self-center h-full min-h-fit flex flex-no-wrap overflow-x-scroll scrolling-touch mb-8 items-start space-x-8">
        <div class="flex-none grid grid-cols-1 lg:grid-cols-3 min-h-[30rem] h-fit w-4/5 md:w-1/2 border rounded-lg">
            <div id="event1_carousel" class="col-span-2 w-full h-full carousel slide relative" data-bs-ride="carousel">
                <div class="h-full carousel-inner rounded-lg relative w-full overflow-hidden">
                    <div class="carousel-item h-full active relative float-left w-full">
                        <img src="/img/carousel/events/event_3/pic_1.png" class="block w-full object-fill" alt="..." />
                    </div>
                    <div class="h-full carousel-item relative float-left w-full">
                        <img src="/img/carousel/events/event_3/pic_2.png" class="block w-full h-full object-cover"
                            alt="..." />
                    </div>
                    <div class="h-full carousel-item relative float-left w-full">
                        <img src="/img/carousel/events/event_3/pic_3.png" class="block w-full h-full object-cover"
                            alt="..." />
                    </div>
                    <div class="h-full carousel-item relative float-left w-full">
                        <img src="/img/carousel/events/event_3/pic_4.png" class="block w-full h-full object-cover"
                            alt="..." />
                    </div>
                </div>
                <button
                    class="carousel-control-prev absolute top-0 bottom-0 flex items-center justify-center p-0 text-center border-0 hover:outline-none hover:no-underline focus:outline-none focus:no-underline left-0"
                    type="button" data-bs-target="#event1_carousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon inline-block bg-no-repeat" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button
                    class="carousel-control-next absolute top-0 bottom-0 flex items-center justify-center p-0 text-center border-0 hover:outline-none hover:no-underline focus:outline-none focus:no-underline right-0"
                    type="button" data-bs-target="#event1_carousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon inline-block bg-no-repeat" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
          </section>
          <section class="panel flex-none w-2/3 md:w-1/3 mr-8 md:pb-4 border rounded-lg">
            <div
                class="h-full lg:h-full bg-black rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
                <div class="mb-8">
                    <p class="text-sm text-gray-100 flex items-center">
                        Workshops
                    </p>
                    <div class="text-gray-100 font-bold text-xl mb-2">QML Workshop</div>
                    <p class="text-gray-100 text-base">The society holds regular workshops and lecture series on
                        concepts in Quantum Technologies delivered by industry and academia experts.</p>
                </div>
                <div class="flex items-center">
                    <img class="w-10 h-10 rounded-full mr-4" src="/img/logo.svg" alt="Society Logo">
                    <div class="text-sm">
                        <p class="text-gray-100 leading-none">QTSoc</p>
                        <p class="text-gray-100">Feb 17</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex-none grid grid-cols-1 lg:grid-cols-3 min-h-[30rem] h-fit w-4/5 md:w-1/2 border rounded-lg">
            <div id="event2_carousel" class="col-span-2 w-full h-full carousel slide relative" data-bs-ride="carousel">
                <div class="h-full carousel-inner rounded-lg relative w-full overflow-hidden">
                    <div class="carousel-item h-full active relative float-left w-full">
                        <img src="/img/carousel/events/event_1/pic_1.png" class="block w-full object-fill" alt="..." />
                    </div>
                    <div class="h-full carousel-item relative float-left w-full">
                        <img src="/img/carousel/events/event_1/pic_2.png" class="block w-full h-full object-cover"
                            alt="..." />
                    </div>
                    <div class="h-full carousel-item relative float-left w-full">
                        <img src="/img/carousel/events/event_1/pic_3.png" class="block w-full h-full object-cover"
                            alt="..." />
                    </div>
                    <div class="h-full carousel-item relative float-left w-full">
                        <img src="/img/carousel/events/event_1/pic_4.png" class="block w-full h-full object-cover"
                            alt="..." />
                    </div>
                </div>
                <button
                    class="carousel-control-prev absolute top-0 bottom-0 flex items-center justify-center p-0 text-center border-0 hover:outline-none hover:no-underline focus:outline-none focus:no-underline left-0"
                    type="button" data-bs-target="#event2_carousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon inline-block bg-no-repeat" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button
                    class="carousel-control-next absolute top-0 bottom-0 flex items-center justify-center p-0 text-center border-0 hover:outline-none hover:no-underline focus:outline-none focus:no-underline right-0"
                    type="button" data-bs-target="#event2_carousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon inline-block bg-no-repeat" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div
                class="h-full lg:h-full bg-black rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
                <div class="mb-8">
                    <p class="text-sm text-gray-100 flex items-center">
                        Society Meetings
                    </p>
                    <div class="text-gray-100 font-bold text-xl mb-2">Regular Society Meetings</div>
                    <p class="text-gray-100 text-base">Regular meetings to discuss the planned events and structure,
                        and give an overview talk on the quantum technology industry. These talks include many useful
                        resources and tips on how you could get more involved and informed with this rapidly evolving
                        industry.</p>
                </div>
                <div class="flex items-center">
                    <img class="w-10 h-10 rounded-full mr-4" src="/img/logo.svg" alt="Society Logo">
                    <div class="text-sm">
                        <p class="text-gray-100 leading-none">QTSoc</p>
                        <p class="text-gray-100">Feb 3</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex-none grid grid-cols-1 lg:grid-cols-3 min-h-[30rem] h-fit w-4/5 md:w-1/2 border rounded-lg">
            <div id="event3_carousel" class="col-span-2 w-full h-full carousel slide relative" data-bs-ride="carousel">
                <div class="h-full carousel-inner rounded-lg relative w-full overflow-hidden">
                    <div class="carousel-item h-full active relative float-left w-full">
                        <img src="/img/carousel/events/quantum_summit_21/pic_1.png" class="block w-full object-fill"
                            alt="..." />
                    </div>
                    <div class="h-full carousel-item relative float-left w-full">
                        <img src="/img/carousel/events/quantum_summit_21/pic_2.png"
                            class="block w-full h-full object-cover" alt="..." />
                    </div>
                    <div class="h-full carousel-item relative float-left w-full">
                        <img src="/img/carousel/events/quantum_summit_21/pic_3.png"
                            class="block w-full h-full object-cover" alt="..." />
                    </div>
                    <div class="h-full carousel-item relative float-left w-full">
                        <img src="/img/carousel/events/quantum_summit_21/pic_4.png"
                            class="block w-full h-full object-cover" alt="..." />
                    </div>
                </div>
                <button
                    class="carousel-control-prev absolute top-0 bottom-0 flex items-center justify-center p-0 text-center border-0 hover:outline-none hover:no-underline focus:outline-none focus:no-underline left-0"
                    type="button" data-bs-target="#event3_carousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon inline-block bg-no-repeat" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button
                    class="carousel-control-next absolute top-0 bottom-0 flex items-center justify-center p-0 text-center border-0 hover:outline-none hover:no-underline focus:outline-none focus:no-underline right-0"
                    type="button" data-bs-target="#event3_carousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon inline-block bg-no-repeat" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div
                class="h-full lg:h-full bg-black rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
                <div class="mb-8">
                    <p class="text-sm text-gray-100 flex items-center">
                        Quantum Conferences
                    </p>
                    <div class="text-gray-100 font-bold text-xl mb-2">London Quantum Summit 2021</div>
                    <p class="text-gray-100 text-base">The society subsidises and encourages attendance of quantum
                        summits and conferences around the world for its memebers.</p>
                </div>
                <div class="flex items-center">
                    <img class="w-10 h-10 rounded-full mr-4" src="/img/logo.svg" alt="Society Logo">
                    <div class="text-sm">
                        <p class="text-gray-100 leading-none">QTSoc</p>
                        <p class="text-gray-100">Nov 10,2021</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex-none grid grid-cols-1 lg:grid-cols-3 min-h-[30rem] h-fit w-4/5 md:w-1/2 border rounded-lg">
            <div id="event4_carousel" class="col-span-2 w-full h-full carousel slide relative" data-bs-ride="carousel">
                <div class="h-full carousel-inner rounded-lg relative w-full overflow-hidden">
                    <div class="carousel-item h-full active relative float-left w-full">
                        <img src="/img/carousel/events/event_2/pic_2.png" class="block w-full object-fill" alt="..." />
                    </div>
                    <div class="h-full carousel-item relative float-left w-full">
                        <img src="/img/carousel/events/event_2/pic_1.png" class="block w-full h-full object-cover"
                            alt="..." />
                    </div>
                    <div class="h-full carousel-item relative float-left w-full">
                        <img src="/img/carousel/events/event_2/pic_3.png" class="block w-full h-full object-cover"
                            alt="..." />
                    </div>
                    <div class="h-full carousel-item relative float-left w-full">
                        <img src="/img/carousel/events/event_2/pic_4.png" class="block w-full h-full object-cover"
                            alt="..." />
                    </div>
                </div>
                <button
                    class="carousel-control-prev absolute top-0 bottom-0 flex items-center justify-center p-0 text-center border-0 hover:outline-none hover:no-underline focus:outline-none focus:no-underline left-0"
                    type="button" data-bs-target="#event4_carousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon inline-block bg-no-repeat" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button
                    class="carousel-control-next absolute top-0 bottom-0 flex items-center justify-center p-0 text-center border-0 hover:outline-none hover:no-underline focus:outline-none focus:no-underline right-0"
                    type="button" data-bs-target="#event4_carousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon inline-block bg-no-repeat" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div
                class="h-full lg:h-full bg-black rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
                <div class="mb-8">
                    <p class="text-sm text-gray-100 flex items-center">
                        Hackathons
                    </p>
                    <div class="text-gray-100 font-bold text-xl mb-2">QHack 2022</div>
                    <p class="text-gray-100 text-base">The society organizes workshops to prepare for hackathons around
                        the year. These include talks given by industry experts and hands on overview of software
                        packages used.</p>
                </div>
                <div class="flex items-center">
                    <img class="w-10 h-10 rounded-full mr-4" src="/img/logo.svg" alt="Society Logo">
                    <div class="text-sm">
                        <p class="text-gray-100 leading-none">QTSoc</p>
                        <p class="text-gray-100">Feb 15</p>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px:0">
        <h2 class="tracking-wide text-blue-200 font-bold text-4xl mb-4">{{ item.data.title }}</h2>
        <div class="font-light text-gray-200 text-xl mb-6">
            {{ item.templateContent | safe }}
        </div>
    </div>
    <div class="self-center w-full xl:w-4/5 flex flex-col sm:flex-row flex-wrap px-4 xl:px:0">
        {% for item in events.events %}
        <a class="w-full sm:w-1/2 flex flex-row hover:shadow-lg hover:bg-blue-800 hover:bg-opacity-50 px-4 sm:px-8 py-6 sm:py-12"
            href="{{ item.link }}">
            <div class="w-1/3 xl:w-1/4">
                <h3 class="tracking-wide text-blue-300 font-bold text-2xl uppercase mb-2">
                    {{ item.date }}
                </h3>
                <h3 class="tracking-wide text-blue-300 font-bold text-1xl uppercase mb-2">
                    {{ [item.duration, item.duration_unit] | join(" ") | safe }}
                </h3>
            </div>
            <div class="w-2/3 xl:w-3/4">
                <h3 class="tracking-wide text-blue-300 font-bold text-2xl uppercase mb-2">{{ item.title }}</h3>
                <div class="font-light text-gray-200 text-lg">
                    {{ item.content | markdown | safe }}
                </div>
            </div>
        </a>
        {% endfor %}
    </div>
    <div class="self-center text-center w-full sm:w-1/3 px-4 sm:px:0">
        <h3 class="font-bold tracking-widest text-blue-200 text-2xl my-6">{{ item.data.afterTitle }}</h3>
    </div>
    <div class="flex flex-row w-full justify-center pt-6">
        <a class="px-10 py-2 text-gray-200 bg-blue-600 rounded-full shadow-md text-lg hover:bg-gray-800 hover:border-red"
            href="#social">Register Now</a>
    </div>
</div>
{% endif %}
{% endfor %}